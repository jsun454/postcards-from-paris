<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OptionsActivity">

    <TextView
            android:id="@+id/activity_options_txt_name"
            android:fontFamily="sans-serif-medium"
            android:textSize="24sp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:id="@+id/activity_options_img_profile_picture"
            android:contentDescription="@string/user_image_description"
            android:background="@color/colorBorder"
            android:src="@color/colorDefault"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:padding="16dp"/>

    <Button
            android:id="@+id/activity_options_btn_change_name"
            android:text="@string/change_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/activity_options_btn_change_picture"
            android:text="@string/change_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/activity_options_btn_log_out"
            android:text="Log Out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText"/>

</LinearLayout>
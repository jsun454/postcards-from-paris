<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@id/partial_postcard_back_img_profile_picture"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/partial_postcard_back_txt_name"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/partial_postcard_back_txt_location"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/partial_postcard_back_txt_time"
                    android:fontFamily="sans-serif-light"
                    android:textSize="16sp"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/partial_postcard_back_img_profile_picture"
                android:contentDescription="@string/user_image_description"
                android:background="@android:color/white"
                android:src="#7C7C7C"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:layout_alignParentEnd="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="7dp"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/partial_postcard_back_txt_postcard_message"
            android:fontFamily="sans-serif-light"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/colorTextDark"
            android:background="@drawable/txt_rounded"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

</LinearLayout>
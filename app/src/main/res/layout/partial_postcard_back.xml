<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@id/partial_postcard_back_img_profile_picture"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/partial_postcard_back_txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/partial_postcard_back_txt_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
                android:id="@+id/partial_postcard_back_img_profile_picture"
                android:contentDescription="@string/user_image_description"
                android:background="@android:color/white"
                android:src="#7C7C7C"
                android:scaleType="centerCrop"
                android:cropToPadding="true"
                android:layout_alignParentEnd="true"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:padding="16dp"/>

    </RelativeLayout>

    <TextView
            android:id="@+id/partial_postcard_back_txt_postcard_message"
            android:layout_width="match_parent"
            android:layout_height="184dp"/>

</LinearLayout>